{
  "manifest_version": 3,
  "name": "Auto Daily Check-in",
  "version": "8.0",
  "description": "Automate daily check-ins for multiple games and platforms.",
  "permissions": [
    "tabs",
    "scripting",
    "alarms",
    "notifications",
    "storage",
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.hoyolab.com/*",
    "https://*.mihoyo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}