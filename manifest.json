{
  "manifest_version": 3,
  "name": "Endfield Auto Check-in",
  "version": "13.3",
  "description": "Automated daily check-in for Arknights: Endfield (SKPORT)",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "cookies",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.skport.com/*",
    "https://*.gryphline.com/*",
    "https://zonai.skport.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://game.skport.com/endfield/sign-in*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}